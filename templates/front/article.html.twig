{% extends "layout.html.twig" %}

{% block page_title %}
    {{ article.titre }}
{% endblock %}

{% block content %}

    {#{{ dump(article) }}#}
    {#{{ dump(article.categorie.nom) }}#}

    <div class="row">
        <!--colleft-->
        <div class="col-md-8 col-sm-12">
            <!--post-detail-->
            <article class="post-detail">
                <img src="{{ asset('images/product/'~article.featuredImage) }}"
                     alt="{{ article.titre }}">
                <h1>{{ article.titre }}</h1>
                <div class="meta-post">
                    <a href="#">
                        {{ article.membre.prenom ~ ' ' ~ article.membre.nom }}
                    </a>
                    <em></em>
                    <span>
                        {{ article.dateCreation | date('d/m/Y') }}
                    </span>
                </div>
                {{ article.contenu | raw }}
                <h5 class="text-right font-heading">
                    <strong>
                        {{ article.membre.prenom ~ ' ' ~ article.membre.nom }}
                    </strong>
                </h5>
            </article>
            <!--social-detail-->
            <div class="social-detail">
                <span>Suivez-nous</span>

                <ul class="list-social-icon">
                    <li>
                        <a href="#" class="facebook">
                            <i class="fa fa-facebook"></i>
                        </a>
                    </li>
                    <li>
                        <a href="#" class="twitter">
                            <i class="fa fa-twitter"></i>
                        </a>
                    </li>
                    <li>
                        <a href="#" class="google">
                            <i class="fa fa-google"></i>
                        </a>
                    </li>
                    <li>
                        <a href="#" class="youtube">
                            <i class="fa fa-youtube-play"></i>
                        </a>
                    </li>
                    <li>
                        <a href="#" class="pinterest">
                            <i class="fa fa-pinterest-p"></i>
                        </a>
                    </li>
                    <li>
                        <a href="#" class="rss">
                            <i class="fa fa-rss"></i>
                        </a>
                    </li>

                </ul>
            </div>

            {% if suggestions is not empty %}
                <div class="detail-caption">
                    <span> SUGGESTIONS</span>
                </div>
                <section class="spotlight-thumbs spotlight-thumbs-related">
                    <div class="row">
                        {% for article in suggestions %}
                            {% include 'components/_suggestions.html.twig' %}
                        {% endfor %}
                    </div>
                </section>
            {% endif %}
        </div>

        {#{% include 'components/_sidebar.html.twig' %}#}
        {{ render(controller('App\\Controller\\TechNews\\FrontController::sidebar')) }}

    </div>
{% endblock %}

